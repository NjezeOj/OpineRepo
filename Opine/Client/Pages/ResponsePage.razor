@page "/responsepage"
@inject IPollRepository pollRepository
<h3>ResponsePage</h3>
<div class="row">
    <div class="col-md-6 col-sm-12 p-4">
        <RadzenChart>
            <RadzenPieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue" />
        </RadzenChart>
    </div>
</div>

@code {
    List<Poll> polls;
    private Poll poll = new Poll();

    protected override async Task OnInitializedAsync()
    {
        polls = await pollRepository.GetPollsById(1);
    }


    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "A",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "B",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "C",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "D",
            Revenue = 80000
        },
    };
}
