<EditForm Model="Question" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div id="flex-container">
        <button class="btn btn-primary" type="submit">Create a Survey</button>
    </div>
    
    <div class="form-group pt-3">
        <h3 id="flex-container" class="font-weight-bold">Question</h3>
        <div id="flex-container" class="mt-4">
            <InputText id="question" class="form-control border-secondary" @bind-Value="@Question.Ques" placeholder="Enter Question" />
            <ValidationMessage For="@(() => Question.Ques)" />
        </div>
    </div>
    <div class="form-group mt-4">
        <h3 id="flex-container" class="font-weight-bold">Options</h3>
        <div id="flex-container" class="mt-4">
            <InputText id="options" class="form-control border-secondary" @bind-Value="@Question.A" placeholder="Option A" />
            <ValidationMessage For="@(() => Question.A)" />
        </div>

        <div id="flex-container" class="mt-3">
            <InputText id="options" class="form-control border-secondary" @bind-Value="@Question.B" placeholder="Option B" />
            <ValidationMessage For="@(() => Question.B)" />
        </div>

        <div id="flex-container" class="mt-3">
            <InputText id="options" class="form-control border-secondary" @bind-Value="@Question.C" placeholder="Option C" />
            <ValidationMessage For="@(() => Question.C)" />
        </div>

        <div id="flex-container" class="mt-3">
            <InputText id="options" class="form-control border-secondary" @bind-Value="@Question.D" placeholder="Option D" />
            <ValidationMessage For="@(() => Question.D)" />
        </div>
    </div>


</EditForm>



@code {
    [Parameter] public Question Question { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}










































