@page "/testui"

<h1>Radzen Blazor Chart pie series</h1>
<div class="row d-flex flex-row align-items-center justify-content-center">
    <div class="col-md-6 col-sm-12 p-4">
        <RadzenChart>
            <RadzenPieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue" />
        </RadzenChart>
    </div>
    <div class="d-flex justify-content-around questionbg align-items-center h-25 px-3 py-3 w-auto">
        <div class="d-flex flex-column">
            <h2>People that haven't selected an Opinion</h2>
            <div class="d-flex justify-content-center">
                <h3>9</h3>
            </div>
            
        </div>
    </div>
</div>


@code {
    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 80000
        },
    };
}