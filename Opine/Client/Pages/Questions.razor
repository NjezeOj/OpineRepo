@page "/questions"

<section>
    <div class="create-survey">
        <button>Create a survey</button>
    </div>

    <div class="questions-div">
        <form>
            <h2>TITLE</h2>
            <input placeholder="Title" type="text" id="title" name="title" />

            <h2>QUESTION</h2>
            <input placeholder="Enter Question" type="text" id="question" name="question" />

            <h2>OPTIONS</h2>
            <input placeholder="Option A" type="text" id="optiona" name="optiona" />
            <input placeholder="Option B" type="text" id="optionb" name="optionb" />
            <input placeholder="Option C" type="text" id="optionc" name="optionc" />
            <input placeholder="Option D" type="text" id="optiond" name="optiond" />
        </form>
    </div>


</section>




